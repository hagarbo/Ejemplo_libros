{% extends 'base.html.twig' %}

{% block title %}Hello ConsultasController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Maximo ventas: {{maximo|number_format}} unidades</h1>

    <table class='table'>
		<thead>
			<tr>
				<th>Titulo</th>
				<th>Fecha publicacion</th>
                <th>Ventas</th>
			</tr>
		</thead>
		<tbody>
			{% for libro in libros %}
				<tr>
					<td>
						{{libro.titulo}}
					</td>

					<td>
						{{libro.fechaPublicacion|date("Y-m-d")}}
					</td>
                    <td>
                        {{libro.unidadesVendidas|number_format}}
                    </td>
				</tr>
                {% else %}
                    <tr>No se han encontrado notas</tr>
			{% endfor %}
		</tbody>

	</table>
</div>
{% endblock %}